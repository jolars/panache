# Example panache configuration with external formatters

# Markdown flavor (affects default extensions)
flavor = "quarto"  # Options: pandoc, quarto, rmarkdown, gfm, commonmark

# Formatting options
[style]
line-width = 80 # Line width for wrapping
wrap = "reflow"  # Wrapping mode. Options: "reflow", "preserve"
blank-lines = "collapse" # Blankline handling. Options: "collapse", "preserve"

# External code formatters
[formatters.r]
preset = "air"

[formatters.yaml]
cmd = "yamlfmt"
args = ["-"]
enabled = false  # Disabled by default
